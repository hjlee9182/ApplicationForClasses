<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@drawable/doctor_o" />
        <!-- show o doctor image-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                        <ImageView

                            android:layout_height="20dp"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/down_arrow"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textColor="#f2a3bb"
                            android:fontFamily="@font/scdream3"
                            android:textSize="18dp"
                            android:gravity="center_horizontal"
                            android:text="시간표 없는 대학교는 위험하니\n시간표를 데려가렴" />

                </LinearLayout>

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/talk_box" />

        </FrameLayout>
        <!-- talk about something-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                        <ImageView
                            android:onClick="auto_btn"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:src="@drawable/select_button_background" />


                        <ImageView
                            android:onClick="dire_btn"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="32dp"
                            android:layout_marginRight="32dp"
                            android:src="@drawable/select_button_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >

                        <!--button1-->
                        <ImageView

                            android:layout_height="20dp"
                            android:layout_width="30dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="14dp"
                            android:src="@drawable/select_arrow"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:layout_marginRight="50dp"
                            android:textColor="#963b57"
                            android:fontFamily="@font/scdream4"
                            android:textSize="20dp"
                            android:text="자동 생성" />
                </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <!--button1-->
                <ImageView

                    android:layout_height="20dp"
                    android:layout_width="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/select_arrow"
                    />

                <TextView
                    android:layout_width="306dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="76dp"
                    android:layout_marginRight="50dp"
                    android:fontFamily="@font/scdream4"
                    android:gravity="center_horizontal"
                    android:text="수동 생성"
                    android:textColor="#963b57"
                    android:textSize="20dp" />
        </LinearLayout>
        </FrameLayout>
        <!--buttons-->

</LinearLayout>