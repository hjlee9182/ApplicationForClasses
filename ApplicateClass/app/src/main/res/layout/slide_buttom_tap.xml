<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/slide_close"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/rounded_orange"
        android:text="닫기"
        android:textSize="13dp"
        android:textColor="#963b57"
        android:gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d9b8a7"
        android:weightSum="10"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="@drawable/title_box">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="과목명"
                android:gravity="center"
                android:fontFamily="@font/sc_6"
                android:textColor="@color/purpleText"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:text="학점"
                android:gravity="center"
                android:fontFamily="@font/sc_6"
                android:textColor="@color/purpleText"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="시간"
                android:gravity="center"
                android:fontFamily="@font/sc_6"
                android:textColor="@color/purpleText"
                />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#cfceca"/>
        <ListView
            android:id="@+id/slid_subject"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.5"
            android:background="#eeebe4"
            android:scrollbars="none"
            ></ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.8"
            android:orientation="vertical"
            android:gravity="center">
            <com.example.applicateclass.CustomView.CustomSelectBtn
                android:id="@+id/slide_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text = "교양 과목">
            </com.example.applicateclass.CustomView.CustomSelectBtn>
            <com.example.applicateclass.CustomView.CustomSelectBtn
                android:id="@+id/slide_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:text = "전공 과목">
            </com.example.applicateclass.CustomView.CustomSelectBtn>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>