<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="180dp"
            android:layout_height="280dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/doctor_o" />

    </LinearLayout>

    <!-- show o doctor image-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/talk_box"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/down_arrow" />

            <TextView
                android:id="@+id/docotoro_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/scdream3"
                android:gravity="center_horizontal"
                android:text="시간표가 없다고?\n시간표 없는 대학교는 위험하니\n시간표를 데려가렴"
                android:textColor="#f2a3bb"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>
    <!-- talk about something-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/doctoro_auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text = "자동 생성">
        </com.example.applicateclass.CustomView.CustomSelectBtn>

        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/doctoro_direct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text = "수동 생성"
            android:layout_marginTop="30dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>


    </LinearLayout>

    <!--buttons-->

</LinearLayout>