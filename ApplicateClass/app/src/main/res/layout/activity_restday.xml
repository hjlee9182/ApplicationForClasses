<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="5">

    <!-- icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:gravity="center">

        <ImageView
            android:layout_width="245dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/gongkong" />
    </LinearLayout>

    <!-- textbox -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/talk_box"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/down_arrow"
            android:layout_marginTop="-10dp"
            />

        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream4"
                android:text="하루쯤은 쉬고싶은 날이 있나?"
                android:textColor="@color/originText"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/restday_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/scdream4"
                android:text="(가능하다면 공강을 설정)"
                android:textColor="#fff"
                android:textSize="14dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.7"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_mon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:text = "월요일"
        android:layout_marginBottom="10dp">
    </com.example.applicateclass.CustomView.CustomSelectBtn>
        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text = "화요일"
            android:layout_marginBottom="10dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>
        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_wed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text = "수요일"
            android:layout_marginBottom="10dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>
        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_thr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text = "목요일"
            android:layout_marginBottom="10dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>
        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text = "금요일"
            android:layout_marginBottom="10dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>
        <com.example.applicateclass.CustomView.CustomSelectBtn
            android:id="@+id/restday_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:text = "괜찮아요"
            android:layout_marginBottom="10dp">
        </com.example.applicateclass.CustomView.CustomSelectBtn>




    </LinearLayout>


</LinearLayout>