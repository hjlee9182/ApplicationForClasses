<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="top"
    android:orientation="vertical"
    android:weightSum="5">

    <!-- icon -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/number_icon" />
    </LinearLayout>
    <!-- talk box -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:background="@drawable/talk_box"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@drawable/down_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/scdream4"
            android:text="몇 학점을 듣고싶은가?"
            android:textColor="@color/originText"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:layout_weight="2"
        android:gravity="top"
        android:orientation="vertical">

        <!-- can edit textbox -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/select_button_background"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:inputType="number"
                android:id="@+id/howmuch_writescore"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/scdream4"
                android:text="학 점"
                android:textColor="@color/buttonText"
                android:textSize="18dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:fontFamily="@font/scdream3"
            android:textSize="16dp"
            android:textColor="#ffff"
            android:text="이번 학기에 들을 학점을 입력해주세요"/>

        <ImageView
            android:id="@+id/howmuch_nextbtn"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/write_score"/>
    </LinearLayout>

</LinearLayout>